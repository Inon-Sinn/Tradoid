<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tradoid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_600</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_500</item>
        <item name="colorSecondaryVariant">@color/yellow_700</item>
        <item name="colorOnSecondary">@color/black</item>


        <!-- _____My Own Creation_____ -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Card Background Color -->
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <!-- Transparent Status Bar -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Clickable Text View Color --> <!-- _____My Own Creation_____ -->
    <style name="clickable_tv_color" parent="Theme.Tradoid">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- Custom Button --> <!-- _____My Own Creation_____ -->
    <style name="Custom_Button" parent="Theme.Tradoid">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <!-- Custom List item icon color --><!-- _____My Own Creation_____ -->
    <style name="my_icon_color">
        <item name="android:tint">@color/icon_color</item>
    </style>

    <!-- Custom List item arrow color --><!-- _____My Own Creation_____ -->
    <style name="my_arrow_color">
        <item name="android:tint">@color/arrow_icon_color</item>
    </style>

    <!-- Custom Circular Gradient --><!-- _____My Own Creation_____ -->
    <style name="my_circular_gradient" parent="Theme.Tradoid">
        <item name="android:background">@drawable/gradient_ring_backgroung_dark</item>
    </style>

</resources>