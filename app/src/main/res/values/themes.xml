<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tradoid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- _____My Own Creation_____ -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Makes your Status Bar icons change to gray - needed for white status bar. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <!-- Card Background Color -->
        <item name="cardBackgroundColor">@color/card_background_light</item>

<!--        <item name="android:background">@drawable/gradient</item>-->
    </style>

    <!-- Clickable Text View Color --> <!-- _____My Own Creation_____ -->
    <style name="clickable_tv_color" parent="Theme.Tradoid">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- Custom Button --> <!-- _____My Own Creation_____ -->
    <style name="Custom_Button" parent="Theme.Tradoid">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.Tradoid">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/white</item>
        <!--This line changes the color of the input of the search View-->
        <item name="android:editTextColor">@android:color/white</item>
    </style>

    <style name="Theme.Tradoid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tradoid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Tradoid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>